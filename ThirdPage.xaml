<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HideSoftInputIssue.ThirdPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout Padding="20,0" Spacing="25">
            <Label Style="{StaticResource Headline}" Text="Confirmation" />
            <Label Style="{StaticResource SubHeadline}" Text="Do you still see the soft keyboard on this screen?" />
            <Image
                Aspect="AspectFit"
                HeightRequest="90"
                Source="dotnet_bot.png" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
